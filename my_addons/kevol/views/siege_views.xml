        <!-- Top menu item -->

        <menuitem name="Kevol" id="kevol.menu_root"/>

        <!-- menu categories -->

        <menuitem name="siege" id="kevol_siege_cat" parent="kevol.menu_root"/>

        <!-- actions -->


        <menuitem name="List of sieges" id="kevol_siege_list" parent="kevol_siege_cat"
                  action="siege_action_window"/>
    </data>
</odoo>