    <!-- Top menu item -->

    <menuitem name="Kevol" id="kevol.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Vols" id="kevol_vol_cat" parent="kevol.menu_root"/>

    <!-- actions -->

    <menuitem name="List of vols" id="kevol_vol_list" parent="kevol_vol_cat"
              action="vol_action_window"/>

  </data>
</odoo>