    <record model="ir.ui.view" id="siege_list_view">
      <field name="name">siége list</field>
      <field name="model">kevol.siege</field>
      <field name="arch" type="xml">
        <tree>
<field name="num_allee"/>
<field name="num_rang"/>
<field name="classe"/>

        </tree>
      </field>
    </record>
 <record model="ir.ui.view" id="siége_form_view">
<field name="name">Siége Form</field>
<field name="model">kevol.siege</field>
<field name="arch" type="xml">
<form>
<group>
<field name="num_allee"/>
<field name="num_rang"/>
<field name="classe"/>

</group>
</form>
</field>
</record>

